{
    "parser": "babel-eslint",
    "extends": [
      "standard",
      "standard-react"
    ],
    "plugins": [
      "babel",
      "react",
      "promise"
    ],
    "env": {
      "browser" : true
    },
    "globals": {
      "__DEV__"      : false,
      "__TEST__"     : false,
      "__PROD__"     : false,
      "__COVERAGE__" : false
    },
    "rules": {
      "key-spacing"          : "off",
      "jsx-quotes"           : [1, "prefer-single"],
      "max-len"              : [1, 120, 2],
      "object-curly-spacing" : [1, "always"],
      "comma-dangle"         : "off"
    }
  }
  